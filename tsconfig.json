{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDirs": ["./src", "./db"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": false,
    "lib": ["ES2021.String"]
  },
  "include": ["./src/**/*", "./db/**/*"],
  "exclude": ["db"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
