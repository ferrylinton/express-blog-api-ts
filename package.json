{
  "name": "express-blog-api-ts",
  "version": "1.0.0",
  "description": "Blog API",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npx tsc",
    "copypublic": "copyfiles --error --up 1 src/public/*.* dist",
    "copylocales": "copyfiles --error --up 1 src/locales/*.* dist",
    "postbuild": "npm run copypublic && npm run copylocales",
    "start": "cross-env NODE_ENV=production dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node src/server.ts",
    "db-create": "cross-env NODE_ENV=development ts-node db/drop-collection.ts && ts-node db/create-collection.ts",
    "init-data": "cross-env NODE_ENV=development ts-node db/init-data.ts",
    "save-post": "cross-env NODE_ENV=development ts-node db/save-post.ts",
    "db-test-data": "cross-env NODE_ENV=development ts-node db/test-data.ts"
  },
  "keywords": [
    "express js",
    "mongodb",
    "redis",
    "typescript"
  ],
  "author": "Ferry L. H.",
  "license": "ISC",
  "dependencies": {
    "app-root-path": "^3.1.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-favicon": "^2.0.4",
    "express-ip-access-control": "^1.1.3",
    "express-rate-limit": "^7.1.4",
    "file-type": "^16.5.3",
    "helmet": "^7.1.0",
    "i18n": "^0.15.1",
    "image-size": "^1.0.2",
    "ip": "^1.1.8",
    "mime-types": "^2.1.35",
    "mongodb": "^5.8.0",
    "multer": "^1.3.0",
    "rate-limit-redis": "^4.2.0",
    "redis": "^4.6.8",
    "saslprep": "^1.0.3",
    "uid": "^2.0.2",
    "winston": "^3.10.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/i18n": "^0.13.6",
    "@types/ip": "^1.1.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.5",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
